<%-include('partials/header');%>
<div class="container">
  <h1><%= listTitle %> </h1>
  <div class="list-container">
    <div class="lists">
      <% newItems.forEach(function(item) {%>

        <form action="/delete" method="post">
     <div class="item">
      <input type="hidden" name="listname" value=<%= listTitle %>>
       <input type="checkbox" name="tasks" class="checkbox" value=<%=item._id %>  onchange="this.form.submit()" />
       <li class="list-items"><%= item.name%></li>
     </div>
</form>
      <%})%>
    </div>
    <form action="/" method="post" class="list-form">
      <input
        type="text"
        name="newItem"
        id="item-input"
        placeholder="Read a book"
        autocomplete="off"
      />
      <button class="btn" type="submit" name="list" value=<%=listTitle%>
        >
        <i class="fa-solid fa-plus add"></i>
      </button>
    </form>
 
  </div>
</div>

<%-include('partials/footer');%>
